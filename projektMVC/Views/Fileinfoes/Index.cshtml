@model IEnumerable<projektMVC.Models.Fileinfo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Fileid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Fileid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Fileid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
